<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<!-- Travel stytles-->

    <!--    Login Activity Theme-->

    <!--    EditText Theme-->

    <style name="EditText_Login">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/FontStyle_InputFormText</item>
        <item name="android:textColor">@color/colorSecondary05LightGray</item>
        <item name="android:textColorHint">@color/colorSecondary05LightGray</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorSecondary05LightGray</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="EditText_Regular" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">10dp</item>
        <item name="android:textAppearance">@style/FontStyle_InputFormText</item>
        <item name="android:textColor">@color/colorPrimary01Blue</item>
        <item name="android:textColorHint">@color/colorPrimary02Gray</item>
    </style>

    <!--    Login Button Medium Size Theme-->

    <style name="ButtonWhite_Medium_Size" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:background">@drawable/btn_background_white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.09</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="TextView_Date_Picker_White" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/date_picker_drawable</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:hint">01-01-2019</item>
    </style>

    <style name="TextView_Date_Picker_Blue" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/date_picker_blue_drawable</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorSecondary05LightGray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:hint">Agregar</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="TextView_Small_Login" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/FontStyle_SecondaryText</item>
        <item name="android:textColor">@color/colorSecondary05LightGray</item>
    </style>

    <style name="TextView_Title" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/FontStyle_Title</item>
        <item name="android:textColor">@color/colorSecondary01DarkBlue</item>
    </style>

    <style name="TextView_Body_Text" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/FontStyle_BodyText</item>
    </style>

    <!--    Dialog-->

    <style name="Dialog_Title" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/FontStyle_ListTitleText</item>
        <item name="android:textColor">@color/colorPrimary01Blue</item>
    </style>




    <!--    Button Big Size Style-->

    <style name="ButtonWhite_Big_Size" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:background">@drawable/item_bg_record</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/color_text_title</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.09</item>
    </style>

    <style name="ButtonBlue_Big_Size" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:background">@drawable/btn_background_blue</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondary05LightGray</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.09</item>
    </style>





    <!--Theme for Buttons e-Tracker-->
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/ic_spinner</item>
    </style>
    <!-- Radio buttons-->
    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorSecondary05LightGray</item>
        <item name="android:textColorSecondary">@color/colorSecondary05LightGray</item>
    </style>

    <!--Theme for Dialogs -->
    <style name="DialogseTracker" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg_white</item>
    </style>

    <!-- SPLASH-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/splash_screen_start</item>
    </style>
    <!-- Text with no change HOME TRAVEL HEADER-->
    <style name="HomeTravelHeaderTEXTNOCHANGE" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorSecondary05LightGray</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!-- Text change HOME TRAVEL HEADER-->
    <style name="HomeTravelHeaderTEXT" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorSecondary05LightGray</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- RatingBar Unicomer-->
    <style name="UnicomerRatingBar"
        parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:progressDrawable">@drawable/ratingbar_unicomer</item>
    </style>

    <!-- Styles Salas-->

    <style name="margen">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- Logout StyleDialog-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="log_out_style">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:text">@string/txt_dialog</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondary01DarkBlue</item>
    </style>


</resources>
