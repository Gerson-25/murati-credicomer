<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:padding="20dp"
        android:background="@drawable/btn_background_white"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_emails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_new_reservation_bg"
            android:padding="20dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:singleLine="false">


            <com.google.android.material.chip.Chip
                android:id="@+id/chip_one"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name_lastname"
                android:visibility="gone" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_two"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name_lastname"
                android:visibility="gone" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_three"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name_lastname"
                android:visibility="gone" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_four"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name_lastname"
                android:visibility="gone" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_five"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name_lastname"
                android:visibility="gone" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_six"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name_lastname"
                android:visibility="gone" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_seven"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name_lastname"
                android:visibility="gone" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_eigth"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name_lastname"
                android:visibility="gone" />


        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:id="@+id/add_email_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chip_group_emails">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:inputType="textEmailAddress"
                    android:id="@+id/input_emails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Agregar correo"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textSize="20sp" />


                <ImageView
                    android:id="@+id/add_user_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_background_blue"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_input_add" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_add"
            android:textColor="@color/white"
            android:letterSpacing="0.08"
            android:fontFamily="@font/roboto_bold"
            android:text="AGREGAR USUARIOS"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_background_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"/>
    </LinearLayout>
</layout>