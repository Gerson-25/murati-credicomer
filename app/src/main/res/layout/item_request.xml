<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/request_item_container"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/btn_background_white"
        android:elevation="2dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/request_icon"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_wallet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_neue_thin"
            android:text="25/01/2021"
            app:layout_constraintBottom_toBottomOf="@+id/request_icon"
            app:layout_constraintStart_toEndOf="@+id/request_icon" />

        <TextView
            android:id="@+id/amount"
            android:fontFamily="@font/helvetica_neue_medium"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:layout_marginStart="20dp"
            android:text="Solicitud por: $2,000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/request_icon"
            app:layout_constraintTop_toTopOf="@+id/request_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>