<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/user_item_container"
    android:layout_marginBottom="20dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/user_photo"

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_005_dracula"/>

    <LinearLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/helvetica_neue_regular"
            android:textSize="14sp"
            android:text="nombre colaborador"
            android:id="@+id/item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="nombre_colaborador@credicomer.com.sv"
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_neue_thin"/>

    </LinearLayout>
</LinearLayout>