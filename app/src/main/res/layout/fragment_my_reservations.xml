<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.roomsv2.fragments.MyReservationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            style="@style/Base.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            app:cardElevation="5dp"
            app:cardMaxElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_black"
                    android:text="Dia:   "
                    android:textColor="@color/colorSecondary01DarkBlue"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_date_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/btn_date_picker"
                    android:fontFamily="@font/roboto_black"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:shadowColor="@color/colorSecondary01DarkBlue"
                    android:text="Hoy"
                    android:textColor="@color/colorSecondary01DarkBlue"
                    android:textSize="18sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_reservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/loading_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:id="@+id/empty_estate"
            android:layout_width="140pt"
            android:layout_height="wrap_content"
            android:src="@drawable/img_empty_state_room_no_reservation" />

        <TextView
            android:id="@+id/text_no_reservations"
            android:visibility="gone"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/roboto_light"
            android:text="@string/no_reservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</layout>