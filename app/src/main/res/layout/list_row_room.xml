<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="room"
            type="sv.com.credicomer.murativ2.ui.roomsv2.models.Room" />
        <variable
            name="date"
            type="String" />

    </data>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background_white"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:roomDetail="@{room}"
            app:date="@{date}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:contentDescription="ImageRoom"
                    app:roomImage="@{room}"
                    tools:srcCompat="@tools:sample/avatars[0]" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_medium"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            app:capitalize="@{room}"
                            app:layout_constraintTop_toTopOf="@+id/imageView21"
                            tools:layout_editor_absoluteX="165dp"
                            tools:text="room" />


                    </LinearLayout>


                    <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="2dp"

                        android:alpha="0.6"
                        android:background="#C1C1C1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_place_room" />
                        <TextView
                            android:layout_gravity="bottom"
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_regular"
                            android:text="@{room.location}"
                            android:textColor="@color/color_text_regular"
                            android:textSize="18sp"
                            tools:layout_editor_absoluteX="165dp"
                            tools:text="Nivel" />
                        <LinearLayout
                            android:layout_marginStart="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="15dp"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginEnd="8dp"
                                android:gravity="end"
                                android:src="@drawable/ic_people" />

                            <TextView
                                android:layout_gravity="bottom"
                                android:id="@+id/textView30"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/helvetica_neue_medium"
                                android:text="@{room.capacity}"
                                android:textColor="@color/colorPrimary02Gray"
                                android:textSize="18sp"
                                tools:layout_editor_absoluteX="343dp"
                                tools:text="88" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout

                        android:id="@+id/room_item_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ic_room_item_television"
                            android:layout_width="30dp"
                            android:padding="5dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            app:setIcons="@{room}"
                            android:contentDescription="televisor"
                            android:background="@drawable/bg_room_items"
                            app:srcCompat="@drawable/ic_room_televisor" />

                        <ImageView
                            android:id="@+id/ic_room_item_proyector"
                            android:layout_width="30dp"
                            android:padding="4dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            app:setIcons="@{room}"
                            android:contentDescription="proyector"
                            android:background="@drawable/bg_room_items"
                            app:srcCompat="@drawable/ic_room_proyector" />

                        <ImageView
                            android:id="@+id/ic_room_item_whiteboard"
                            android:layout_width="30dp"
                            android:padding="5dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            app:setIcons="@{room}"
                            android:contentDescription="pizarra"
                            android:background="@drawable/bg_room_items"
                            app:srcCompat="@drawable/ic_room_pizarra" />

                        <ImageView
                            android:id="@+id/ic_room_item_phonecall"
                            android:layout_width="30dp"
                            android:padding="7dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            app:setIcons="@{room}"
                            android:contentDescription="telefono"
                            android:background="@drawable/bg_room_items"
                            app:srcCompat="@drawable/ic_room_phone_call" />

                        <ImageView
                            android:id="@+id/ic_room_item_screenproyector"
                            android:layout_width="30dp"
                            android:padding="5dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            app:setIcons="@{room}"
                            android:contentDescription="pantalla"
                            android:background="@drawable/bg_room_items"
                            app:srcCompat="@drawable/ic_room_pantalla_proyector" />

                        <ImageView
                            android:id="@+id/ic_room_item_webcam"
                            android:layout_width="30dp"
                            android:padding="6dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            app:setIcons="@{room}"
                            android:contentDescription="webcam"
                            android:background="@drawable/bg_room_items"
                            app:srcCompat="@drawable/ic_room_webcam" />

                        <ImageView
                            android:id="@+id/ic_room_item_noicon"
                            android:layout_width="30dp"
                            android:padding="5dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            app:setIcons="@{room}"
                            android:contentDescription="notfound"
                            android:background="@drawable/bg_room_items"
                            app:srcCompat="@drawable/ic_room_no_logo" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>