<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        tools:context=".ui.profile.view.fragments.AddMessageFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/users_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/message"
            android:hint="Escribe tu mensaje..."
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:fontFamily="@font/helvetica_neue_regular"
            android:lines="5"
            android:background="@drawable/search_recognition_bg"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="@font/helvetica_neue_regular"
            android:textSize="12sp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOTA: Recuerda que tu mensaje sera entregado despues de haber sido revisado y aprovado por las personas encargadas" />

       <LinearLayout
           android:layout_marginTop="20dp"
           android:gravity="center_horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <Button
               android:id="@+id/btn_send_message"
               android:textColor="@color/white"
               android:text="enviar"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>

    </LinearLayout>
</layout>