<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            tools:context=".ui.profile.view.fragments.AchievementListFragment">

            <EditText
                android:id="@+id/users_et"
                android:textSize="14sp"
                android:fontFamily="@font/helvetica_neue_regular"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_baseline_person_search_24"
                android:lines="1"
                android:background="@drawable/search_recognition_bg"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

           <LinearLayout
               android:layout_marginTop="20dp"
               android:layout_gravity="center_horizontal"
               android:orientation="vertical"
               android:id="@+id/empty_state_container"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_gravity="center"
                   android:text="No hay reconocimientos recientes"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <Button
                   android:id="@+id/send_recongnition_btn"
                   android:layout_gravity="center"
                   android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                   android:textColor="@color/white"
                   android:text="enviar reconocimiento "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/credicomer_recognitions_rv"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recognitions_title" />

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/user_list_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>