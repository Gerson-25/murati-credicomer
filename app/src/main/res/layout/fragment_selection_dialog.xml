<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.profile.view.fragments.SelectionDialogFragment">

        <TextView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/helvetica_neue_medium"
            android:text="Selecciona la(s) personas a las que te gustaria enviar un reconocimento: "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/selected_users_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:singleLine="false">


            <com.google.android.material.chip.Chip
                android:id="@+id/chip_one"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar usuario"/>


        </com.google.android.material.chip.ChipGroup>

        <AutoCompleteTextView
            android:textSize="14sp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:id="@+id/user_ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_recognition_bg"
            android:fontFamily="@font/helvetica_neue_regular"
            android:padding="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layoutManager="LinearLayoutManager"
                tools:context=".ui.profile.view.fragments.UsersListFragment"
                tools:listitem="@layout/fragment_users_list" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:visibility="gone"
                android:layout_gravity="bottom|end"
                android:id="@+id/floatingActionButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/checkmark_medium_ff"/>

        </FrameLayout>

    </LinearLayout>

</layout>