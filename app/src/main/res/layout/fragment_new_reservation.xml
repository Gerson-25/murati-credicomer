<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="room"
            type="sv.com.credicomer.murativ2.ui.roomsv2.models.Room" />
    </data>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/btn_background_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.roomsv2.fragments.NewReservationFragment">

                <LinearLayout
                    android:id="@+id/linearLayout16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_background_white"
                    android:orientation="horizontal"
                    android:padding="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        app:setRoomImage="@{room.roomImages}"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_destination"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/room_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="20dp"
                            android:fontFamily="@font/helvetica_neue_bold"
                            android:letterSpacing="0.02"
                            android:text="@{room.roomName}"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:gravity="center_vertical"
                                tools:text="nivel"
                                android:id="@+id/text_room_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:drawableStart="@drawable/ic_place_alliance"
                                android:drawablePadding="5dp"
                                android:fontFamily="@font/helvetica_neue_thin"
                                android:text="@{room.location}"
                                android:textSize="14sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView49" />

                            <TextView
                                tools:text="4"
                                android:gravity="center_vertical"
                                android:id="@+id/text_room_capacity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"
                                android:drawableStart="@drawable/ic_people"
                                android:drawablePadding="5dp"
                                android:fontFamily="@font/helvetica_neue_thin"
                                android:text="@{room.capacity}"
                                android:textSize="14sp"
                                app:layout_constraintStart_toEndOf="@+id/textView50"
                                app:layout_constraintTop_toBottomOf="@+id/textView49" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/divider10"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/colorPrimary02Gray"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout16">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout16">

                    <LinearLayout
                        android:id="@+id/details_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/btn_background_white"
                        android:elevation="2dp"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="60dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_light"
                                android:text="Titulo de Reunion"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/meeting_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/input_new_reservation_bg"
                                android:drawableStart="@drawable/ic_baseline_edit_24"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/helvetica_neue_thin"
                                android:hint="Agregar titulo"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/input_set_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/input_new_reservation_bg"
                                    android:clickable="true"
                                    android:drawableStart="@drawable/ic_calendar"
                                    android:drawablePadding="10dp"
                                    android:focusable="true"
                                    android:fontFamily="@font/helvetica_neue_thin"
                                    android:hint="Agregar Fecha"
                                    android:padding="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />

                                <CalendarView
                                    android:id="@+id/calendar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />

                                <Button
                                    android:id="@+id/button_close_calendar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:background="@drawable/btn_background_blue"
                                    android:letterSpacing="0.08"
                                    android:text="@string/accept_string"
                                    android:textColor="@color/white"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/input_start_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/input_new_reservation_bg"
                                        android:clickable="true"
                                        android:drawableStart="@drawable/ic_baseline_access_alarm_24"
                                        android:drawablePadding="10dp"
                                        android:focusable="true"
                                        android:fontFamily="@font/helvetica_neue_thin"
                                        android:hint="Inicio"
                                        android:padding="10dp"
                                        android:textColor="@color/black"
                                        android:textSize="20sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/input_end_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/input_new_reservation_bg"
                                        android:clickable="true"
                                        android:drawableStart="@drawable/ic_baseline_access_alarm_24"
                                        android:drawablePadding="10dp"
                                        android:focusable="true"
                                        android:fontFamily="@font/helvetica_neue_thin"
                                        android:hint="Final"
                                        android:padding="10dp"
                                        android:textColor="@color/black"
                                        android:textSize="20sp" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/chip_group_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/input_new_reservation_bg"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:layout_marginTop="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/calendar">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:src="@drawable/ic_baseline_people_24" />

                                <com.google.android.material.chip.ChipGroup
                                    android:id="@+id/chip_group_emails"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:theme="@style/Theme.MaterialComponents.Light"
                                    app:singleLine="false">


                                    <com.google.android.material.chip.Chip
                                        android:id="@+id/chip_one"
                                        style="@style/Widget.MaterialComponents.Chip.Entry"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="name_lastname"
                                        android:visibility="gone" />

                                    <com.google.android.material.chip.Chip
                                        android:id="@+id/chip_two"
                                        style="@style/Widget.MaterialComponents.Chip.Entry"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="name_lastname"
                                        android:visibility="gone" />

                                    <com.google.android.material.chip.Chip
                                        android:id="@+id/chip_three"
                                        style="@style/Widget.MaterialComponents.Chip.Entry"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="name_lastname"
                                        android:visibility="gone" />

                                    <com.google.android.material.chip.Chip
                                        android:id="@+id/chip_four"
                                        style="@style/Widget.MaterialComponents.Chip.Entry"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="name_lastname"
                                        android:visibility="gone" />

                                    <com.google.android.material.chip.Chip
                                        android:id="@+id/chip_five"
                                        style="@style/Widget.MaterialComponents.Chip.Entry"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="name_lastname"
                                        android:visibility="gone" />

                                    <com.google.android.material.chip.Chip
                                        android:id="@+id/chip_six"
                                        style="@style/Widget.MaterialComponents.Chip.Entry"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="name_lastname"
                                        android:visibility="gone" />

                                    <com.google.android.material.chip.Chip
                                        android:id="@+id/chip_seven"
                                        style="@style/Widget.MaterialComponents.Chip.Entry"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="name_lastname"
                                        android:visibility="gone" />

                                    <com.google.android.material.chip.Chip
                                        android:id="@+id/chip_eigth"
                                        style="@style/Widget.MaterialComponents.Chip.Entry"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="name_lastname"
                                        android:visibility="gone"
                                        />

                                </com.google.android.material.chip.ChipGroup>

                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:paddingEnd="20dp"
                            android:paddingStart="20dp"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="@color/white"
                            android:id="@+id/add_users_button"
                            android:text="Agregar usuarios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_reserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/helvetica_neue_bold"
                        android:letterSpacing="0.08"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:text="RESERVAR"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                android:id="@+id/loading_container"
                android:elevation="3dp"
                android:background="@color/baby_blue_80_opacity"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/details_container">

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
</layout>