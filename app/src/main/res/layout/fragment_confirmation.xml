<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.information.ConfirmationFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="20dp"
            android:id="@+id/succes_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
               android:visibility="gone"
                android:padding="20dp"
                android:id="@+id/loader_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_new_reservation_bg"
                android:elevation="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/linearLayout24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.airbnb.lottie.LottieAnimationView
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/loading_paperplane"
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"/>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation_loading_success"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:visibility="gone"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="false"
                        app:lottie_rawRes="@raw/animation_circle_success"
                        app:lottie_speed="2" />
                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/wait_string"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout24" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_margin="5dp"
                    android:id="@+id/constraintLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_background_white"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:id="@+id/image_add_energy_bill"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/input_new_reservation_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView55">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="30dp"
                            android:src="@drawable/image_placeholder" />

                        <TextView
                            android:id="@+id/text_add_energy_bill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/helvetica_neue_thin"
                            android:gravity="center"
                            android:text="@string/stand_string"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/textView55"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="@string/add_energy_receip_string"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:elevation="1dp"
                        android:id="@+id/button_add_energy_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/colorSecondary05LightGray"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:src="@drawable/ic_menu_camera"
                        android:text="@string/add_string"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/image_add_energy_bill" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:id="@+id/constraintLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_background_white"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">


                    <FrameLayout
                        android:id="@+id/image_add_water_bill"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/input_new_reservation_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView56">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="30dp"
                            android:src="@drawable/image_placeholder" />

                        <TextView
                            android:fontFamily="@font/helvetica_neue_thin"
                            android:layout_gravity="bottom"
                            android:id="@+id/text_add_water_bill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/stand_string"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="@+id/button_add_water_bill"
                            app:layout_constraintStart_toEndOf="@+id/button_add_water_bill"
                            app:layout_constraintTop_toBottomOf="@+id/image_add_water_bill" />
                    </FrameLayout>

                    <TextView
                        android:textSize="18sp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:id="@+id/textView56"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/add_water_receip_string"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:backgroundTint="@color/colorSecondary05LightGray"
                        android:id="@+id/button_add_water_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_menu_camera"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/add_string"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/image_add_water_bill" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:id="@+id/constraintLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_background_white"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">

                    <FrameLayout
                        android:id="@+id/image_add_file"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/input_new_reservation_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView57">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="30dp"
                            android:src="@drawable/ic_google_docs" />

                        <TextView
                            android:id="@+id/text_add_file"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_thin"
                            android:padding="10dp"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="Pendiente"
                            android:textColor="@color/black"
                            android:layout_gravity="bottom"
                            app:layout_constraintBottom_toBottomOf="@+id/button_add_file"
                            app:layout_constraintStart_toEndOf="@+id/button_add_file"
                            app:layout_constraintTop_toBottomOf="@+id/image_add_file" />
                    </FrameLayout>

                    <TextView
                        android:layout_margin="10dp"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:id="@+id/textView57"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adjunta la carta de recomendacion de tu encargado"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:backgroundTint="@color/colorSecondary05LightGray"
                        android:id="@+id/button_add_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/input_new_reservation_bg"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:src="@drawable/ic_google_docs"
                        android:text="Agregar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/image_add_file" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:id="@+id/constraintLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_background_white"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout6">

                    <FrameLayout
                        android:id="@+id/image_add_debt_form"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/input_new_reservation_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView57">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="30dp"
                            android:src="@drawable/ic_google_docs" />

                        <TextView
                            android:id="@+id/text_add_debt_form"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_thin"
                            android:padding="10dp"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="@string/stand_string"
                            android:textColor="@color/black"
                            android:layout_gravity="bottom"
                            app:layout_constraintBottom_toBottomOf="@+id/button_add_file"
                            app:layout_constraintStart_toEndOf="@+id/button_add_file"
                            app:layout_constraintTop_toBottomOf="@+id/image_add_file" />
                    </FrameLayout>

                    <TextView
                        android:layout_margin="10dp"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:id="@+id/textView58"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/debt_form_string"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:backgroundTint="@color/colorSecondary05LightGray"
                        android:id="@+id/button_add_debt_form"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/input_new_reservation_bg"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:src="@drawable/ic_menu_camera"
                        android:text="@string/add_string"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/image_add_file" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout7">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background_white"
                        android:inputType="text"
                        android:letterSpacing="0.02"
                        android:text="@string/text_bak"
                        tools:ignore="TextViewEdits" />

                    <Button
                        android:id="@+id/btn_send_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background_blue"
                        android:fontFamily="@font/helvetica_neue_bold"
                        android:inputType="text"
                        android:letterSpacing="0.02"
                        android:text="@string/text_complete"
                        android:textColor="@color/white"

                        tools:ignore="TextViewEdits"
                        tools:layout_editor_absoluteX="20dp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>
</layout>