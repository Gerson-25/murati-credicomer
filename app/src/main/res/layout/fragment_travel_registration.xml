<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".fragments.TravelRegistrationFragment">

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/helvetica_neue_bold"
                    android:text="Vamos a iniciar"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/helvetica_neue_regular"
                    android:text="Ingresa los datos necesarios para poder iniciar tu proximo viaje"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView45" />

                <ImageView
                    android:layout_marginTop="50dp"
                    android:id="@+id/imageView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_travel_frame"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView44" />


                <FrameLayout
                    android:id="@+id/amount_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/limit_cash"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="6dp"
                                android:src="@drawable/ic_004_analysis" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView_description_cash"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="12dp"
                                    android:backgroundTint="@color/colorPrimary01Blue"
                                    android:ems="10"
                                    android:fontFamily="@font/roboto_regular"
                                    android:hint="@string/initial_date"
                                    android:text="@string/cash_description"
                                    android:textColor="@color/color_text_title"
                                    android:textColorHint="@color/hint"
                                    android:textSize="13sp" />

                                <EditText
                                    android:id="@+id/editTextCost"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="12dp"
                                    android:backgroundTint="@color/colorPrimary01Blue"
                                    android:drawableStart="@drawable/ic_money"
                                    android:fontFamily="@font/roboto_regular"
                                    android:hint="@string/cost"
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/color_text_title"
                                    android:textColorHint="@color/hint"
                                    android:textSize="14sp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView16">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/btn_background_blue"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/linearLayout20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:textColor="@color/primaryLightBackground"
                                    android:fontFamily="@font/helvetica_neue_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lugar de salida:"/>

                                <AutoCompleteTextView
                                    android:elevation="2dp"
                                    android:id="@+id/editTextOrigin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/input_new_reservation_bg_white"
                                    android:ems="5"
                                    android:fontFamily="@font/helvetica_neue_regular"
                                    android:hint="@string/origin_country_EditText"
                                    android:inputType="textPersonName"
                                    android:padding="15dp"
                                    android:textColor="@color/color_text_title"
                                    android:textSize="18sp" />

                                <TextView
                                    android:textColor="@color/primaryLightBackground"
                                    android:fontFamily="@font/helvetica_neue_regular"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lugar de destino:"/>

                                <AutoCompleteTextView
                                    android:elevation="2dp"
                                    android:id="@+id/editTextDestiny"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/input_new_reservation_bg_white"
                                    android:fontFamily="@font/helvetica_neue_regular"
                                    android:hint="@string/destiny_country_EditText"
                                    android:inputType="textPersonName"
                                    android:padding="15dp"
                                    android:textColor="@color/color_text_title"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout20">

                            <TextView
                                android:textColor="@color/primaryLightBackground"
                                android:fontFamily="@font/helvetica_neue_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fecha:"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:elevation="2dp"
                                    android:id="@+id/textView_pick_initial_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/input_new_reservation_bg_white"
                                    android:fontFamily="@font/helvetica_neue_regular"
                                    android:hint="@string/initial_date"
                                    android:padding="15dp"
                                    android:textColor="@color/color_text_title"
                                    android:textSize="18sp" />

                                <TextView
                                    android:elevation="2dp"
                                    android:id="@+id/textView_pick_final_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/input_new_reservation_bg_white"
                                    android:fontFamily="@font/helvetica_neue_regular"
                                    android:hint="@string/final_date"
                                    android:padding="15dp"
                                    android:textColor="@color/color_text_title"
                                    android:textSize="18sp" />

                            </LinearLayout>


                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Button
                        android:fontFamily="@font/helvetica_neue_bold"
                        android:id="@+id/button_registrations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_accent"
                        android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                        android:drawablePadding="10dp"
                        android:letterSpacing="0.08"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/initial_travel"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
</layout>