<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                tools:context=".fragments.TravelRegistrationFragment">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/initial"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary01Blue"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/item_bg_record"
                    android:elevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:text="@string/countrys"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/color_text_title"
                android:layout_marginTop="4dp"
                android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="12dp"
                                android:layout_marginBottom="6dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_travel_car_plane" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:orientation="vertical">

                                <AutoCompleteTextView
                                    android:id="@+id/editTextOrigin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPrimary01Blue"
                                    android:ems="10"
                                    android:fontFamily="@font/roboto_regular"
                                    android:hint="@string/origin_country_EditText"
                                    android:inputType="textPersonName"
                                    android:textColor="@color/color_text_regular"
                                    android:textColorHint="@color/hint"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="12dp"/>

                                <AutoCompleteTextView
                                    android:id="@+id/editTextDestiny"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPrimary01Blue"
                                    android:ems="10"
                                    android:fontFamily="@font/roboto_regular"
                                    android:hint="@string/destiny_country_EditText"
                                    android:inputType="textPersonName"
                                    android:textColor="@color/color_text_regular"
                                    android:textColorHint="@color/hint"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="12dp"/>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/item_bg_record"
                    android:elevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17dp"
                            android:text="@string/travel_days"
                            android:textColor="@color/color_text_title"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginTop="4dp"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="12dp"
                                android:layout_marginBottom="6dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_002_calendar" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView_pick_initial_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:backgroundTint="@color/colorPrimary01Blue"
                                    android:ems="10"
                                    android:fontFamily="@font/roboto_regular"
                                    android:hint="@string/initial_date"
                                    android:textColor="@color/color_text_title"
                                    android:textColorHint="@color/hint"
                                    android:layout_marginEnd="12dp"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/textView_pick_final_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:backgroundTint="@color/colorPrimary01Blue"
                                    android:ems="10"
                                    android:fontFamily="@font/roboto_regular"
                                    android:hint="@string/final_date"
                                    android:layout_marginEnd="12dp"
                                    android:textColor="@color/color_text_title"
                                    android:textColorHint="@color/hint"
                                    android:textSize="14sp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/item_bg_record"
                    android:elevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17dp"
                            android:text="@string/limit_cash"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/color_text_title"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="12dp"
                                android:layout_marginBottom="6dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_004_analysis" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView_description_cash"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPrimary01Blue"
                                    android:ems="10"
                                    android:layout_marginEnd="12dp"
                                    android:text="@string/cash_description"
                                    android:fontFamily="@font/roboto_regular"
                                    android:hint="@string/initial_date"
                                    android:textColor="@color/color_text_title"
                                    android:textColorHint="@color/hint"
                                    android:textSize="13sp" />

                    <EditText
                        android:id="@+id/editTextCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary01Blue"
                        android:drawableStart="@drawable/ic_money"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="@string/cost"
                        android:inputType="numberDecimal"
                        android:textColor="@color/color_text_title"
                        android:textColorHint="@color/hint"
                        android:layout_marginEnd="12dp"
                        android:textSize="14sp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>
                <Button
                    android:id="@+id/buttonRegistrations"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="70dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/initial_travel"
                    android:background="@color/colorPrimary"
                    android:textColor="#f5f5f5"
                    android:textSize="20sp"/>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</layout>